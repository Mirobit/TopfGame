{
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["import"],
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-throw-literal": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "import/extensions": "off",
    "func-names": "off"
  },
  "ignorePatterns": ["node_modules", "frontend/assets/vendor"],
  "env": {
    "browser": true,
    "node": true
  }
}
